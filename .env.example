# =================================
# Database Configuration
# =================================
DATABASE_URL="postgresql://autodj:autodj@localhost:5433/autodj?schema=public"
POSTGRES_PORT=5433

# =================================
# Redis Configuration
# =================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =================================
# JWT Authentication
# =================================
JWT_SECRET=your-super-secret-key-change-in-production-min-32-chars
JWT_EXPIRATION=7d

# =================================
# Storage Configuration
# =================================
STORAGE_TYPE=local
STORAGE_PATH=./storage

# AWS S3 (for production)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_BUCKET_NAME=autodj-storage
# AWS_REGION=eu-west-1

# =================================
# API Configuration
# =================================
API_PORT=3001
API_HOST=0.0.0.0
API_PREFIX=api/v1
NODE_ENV=development

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =================================
# Frontend Configuration
# =================================
VITE_API_URL=http://localhost:3001/api/v1
VITE_WS_URL=http://localhost:3001

# =================================
# Python Workers Configuration
# =================================
PYTHON_WORKERS_COUNT=2
PYTHON_LOG_LEVEL=INFO

# Audio processing
MAX_TRACK_DURATION_MINUTES=15
MAX_TRACKS_PER_PROJECT=50
DEMUCS_MODEL=htdemucs_ft

# =================================
# LLM Configuration (Mistral)
# =================================
MISTRAL_API_KEY=your-mistral-api-key

# =================================
# Queue Configuration
# =================================
QUEUE_ANALYZE_CONCURRENCY=2
QUEUE_MIX_CONCURRENCY=1

# =================================
# Logging
# =================================
LOG_LEVEL=debug
LOG_FORMAT=pretty
